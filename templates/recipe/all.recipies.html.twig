{% extends "base.html.twig" %}

{% block body %}

<main>
    <section class='recipies-list-container'>

        {% if recipies is empty %}
        <h2>Aucune recette n'a été trouvée :(</h2>
        {% else %}

        {% for i, recipe in recipies %}

        {% include "recipe/_recipe.template.html.twig" %}

        {% endfor %}
        {% endif %}

    </section>
</main>
{% endblock %}